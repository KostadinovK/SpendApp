{{>header}}
 <h2>Welcome back, <span class="username">{{username}}</span></h2>
<div class="buttons">
    <a href="#/incomes/register">Register Income</a>
    <a href="#/payments/register">Register Payment</a>
</div>
<div class="balance-wrapper">
    <div class="icon-wrapper">
        <i class="fas fa-wallet"></i>
    </div>
    <div class="balance">
        <p><span {{#if hasNegativeBalance}} class="red" {{/if}}>{{amount}}</span> {{symbol}}</p>
    </div>
</div>
<div class="chart-wrapper">
    <canvas class="balance-chart" id="balance-chart" width="400" height="400"></canvas>
</div>
<div class="charts-wrapper">
    <div class="payments-wrapper">
        <h2>Payments</h2>
        <canvas class="transaction-chart" id="payments-chart" width="300" height="300"></canvas>
    </div>
    <div class="incomes-wrapper">
        <h2>Incomes</h2>
        <canvas class="transaction-chart" id="incomes-chart" width="300" height="300"></canvas>
    </div>
</div>
{{>transactions}}
{{>footer}}