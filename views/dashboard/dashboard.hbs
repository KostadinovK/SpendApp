{{>header}}
<h2 class="title">Dashboard</h2>
<div class="balance-wrapper">
    <div class="icon-wrapper">
        <i class="fas fa-wallet"></i>
    </div>
    <div class="balance">
        <p>200$</p>
    </div>
</div>
<div class="chart-wrapper">
    <canvas class="balance-chart" id="balance-chart" width="400" height="400"></canvas>
</div>
<div class="charts-wrapper">
    <div class="payments-wrapper">
        <h2>Payments</h2>
        <canvas class="transaction-chart" id="payments-chart" width="400" height="400"></canvas>
        <div class="btns-wrapper">
            <button class="total" id="totalPaymentsBtn">Total</button>
            <button class="yearly" id="yearlyPaymentsBtn">This Year</button>
            <button class="monthly" id="monthlyPaymentsBtn">This Month</button>
        </div>
    </div>
    <div class="incomes-wrapper">
        <h2>Incomes</h2>
        <canvas class="transaction-chart" id="incomes-chart" width="400" height="400"></canvas>
        <div class="btns-wrapper">
            <button class="total" id="totalIncomesBtn">Total</button>
            <button class="yearly" id="yearlyIncomesBtn">This Year</button>
            <button class="monthly" id="monthlyIncomesBtn">This Month</button>
        </div>
    </div>
</div>
{{>transactions}}
{{>footer}}